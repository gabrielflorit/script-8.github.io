.Output
  display none
  justify-content space-between
  align-items center
  background $palette-7
  position relative
  padding 1.5rem
  flex-direction column

  z-index 10
  padding 0
  position absolute
  &.in-tutorial
    position relative

  width calc(100vmin - 3rem)
  // height calc(100vmin - 3rem)
  max-width 40rem
  height auto
  @media screen and (max-width: 26rem)
    width calc(100vmin)
    // height calc(100vmin)
    height auto

  button.play
    width 100%
    margin 0

  iframe
    border none
    width 100%

  .errors-and-stats
    width 100%
    @extend .VT323
    color $palette-5
    text-transform uppercase
    font-size $font-medium
    overflow hidden
    .log
      color $palette-1
    .errors > li
      color $palette-2
    .errors > li.clickable
      color $palette-1
      :hover
        color $palette-0
      cursor pointer
    .stats
      color $palette-4
